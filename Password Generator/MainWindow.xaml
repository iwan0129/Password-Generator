<Window
    x:Class="Password_Generator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MainWin"
    Title="Password Generator"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="450"
    Background="#FF252020"
    Closing="MainWin_Closing"
    SnapsToDevicePixels="True"
    WindowStyle="ThreeDBorderWindow"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="34*" />

            <RowDefinition Height="179*" />
            <RowDefinition Height="198*" />

            <RowDefinition Height="8*" />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="0*" />

            <ColumnDefinition />

            <ColumnDefinition Width="0*" />

        </Grid.ColumnDefinitions>

        <TextBox
            x:Name="PasswordBox"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            AcceptsReturn="True"
            Background="{x:Null}"
            CaretBrush="White"
            FontSize="34"
            Foreground="White"
            Text="{Binding Mode=OneWay, IsAsync=True}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />

        <Button
            x:Name="GenerateButton"
            Grid.Row="2"
            Grid.Column="1"
            Height="60"
            Margin="198,76,199,0"
            VerticalAlignment="Top"
            Click="GenerateButton_Click"
            Content="Generate"
            FontSize="34" Background="#FF383434" Foreground="White" />

        <Menu
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="34"
            VerticalAlignment="Top"
            Background="Black">

            <MenuItem
                FontSize="24"
                Foreground="White"
                Header="Options">

                <TextBlock Foreground="Black" Text="Password Length" />

                <TextBox
                    Name="PasswordLengthBox"
                    Width="182"
                    Background="{x:Null}"
                    BorderBrush="#FF000923"
                    KeyDown="PasswordLengthBox_KeyDown"
                    TextChanged="PasswordLengthBox_TextChanged" />

                <Separator />

                <TextBlock Foreground="Black" Text="SerialKey Length" />

                <TextBox
                    Name="SerialKeyLengthBox"
                    Width="182"
                    Background="{x:Null}"
                    BorderBrush="#FF000923"
                    KeyDown="SerialKeyLengthBox_KeyDown"
                    TextChanged="SerialKeyLengthBox_TextChanged" />

                <TextBlock Foreground="Black" Text="SerialKey Size" />

                <TextBox
                    Name="SerialKeySizeBox"
                    Width="182"
                    Background="{x:Null}"
                    BorderBrush="#FF000923"
                    KeyDown="SerialKeySizeBox_KeyDown"
                    TextChanged="SerialKeySizeBox_TextChanged" />

            </MenuItem>

            <Separator Width="5" />

            <MenuItem
                FontSize="24"
                Foreground="White"
                Header="Generator">

                <MenuItem
                    Name="PasswordGenerator"
                    Click="PasswordGenerator_Click"
                    Foreground="Black"
                    Header="Password"
                    IsCheckable="True" />

                <MenuItem
                    Name="SerialKeyGenerator"
                    Click="SerialKeyGenerator_Click"
                    Foreground="Black"
                    Header="Serial Key"
                    IsCheckable="True" />

            </MenuItem>

        </Menu>

        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Width="792"
            Height="37"
            Margin="0,2,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Horizontal">

            <Separator
                Width="32"
                Background="{x:Null}"
                Foreground="{x:Null}" />

            <CheckBox
                x:Name="LetterBox"
                Width="15"
                Height="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="LetterBox_Click"
                Foreground="White">

                <CheckBox.LayoutTransform>

                    <ScaleTransform ScaleX="2.05" ScaleY="2.05" />

                </CheckBox.LayoutTransform>

            </CheckBox>

            <TextBlock
                Width="78"
                Height="33"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="White"
                Text=" Letters" />

            <Separator
                Width="32"
                Background="{x:Null}"
                Foreground="{x:Null}" />

            <CheckBox
                x:Name="BigLetterBox"
                Width="15"
                Height="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BigLetterBox_Click"
                Foreground="White">

                <CheckBox.LayoutTransform>

                    <ScaleTransform ScaleX="2.05" ScaleY="2.05" />

                </CheckBox.LayoutTransform>

            </CheckBox>

            <TextBlock
                Width="119"
                Height="33"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="White"
                Text=" Big Letters" />

            <Separator
                Width="32"
                Background="{x:Null}"
                Foreground="{x:Null}" />

            <CheckBox
                x:Name="DigitBox"
                Width="15"
                Height="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="DigitBox_Click"
                Foreground="White">

                <CheckBox.LayoutTransform>

                    <ScaleTransform ScaleX="2.05" ScaleY="2.05" />

                </CheckBox.LayoutTransform>

            </CheckBox>

            <TextBlock
                Width="68"
                Height="33"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="White"
                Text=" Digits" />

            <Separator
                Width="32"
                Background="{x:Null}"
                Foreground="{x:Null}" />

            <CheckBox
                x:Name="SpaceBox"
                Grid.Row="1"
                Grid.Column="1"
                Width="15"
                Height="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="SpaceBox_Click"
                Foreground="White">

                <CheckBox.LayoutTransform>

                    <ScaleTransform ScaleX="2.05" ScaleY="2.05" />

                </CheckBox.LayoutTransform>

            </CheckBox>

            <TextBlock
                Width="70"
                Height="33"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="White"
                Text=" Space" />

            <Separator
                Width="32"
                Background="{x:Null}"
                Foreground="{x:Null}" />

            <CheckBox
                x:Name="SymbolBox"
                Grid.Row="1"
                Grid.Column="1"
                Width="15"
                Height="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="SymbolBox_Click"
                Foreground="White">

                <CheckBox.LayoutTransform>

                    <ScaleTransform ScaleX="2.05" ScaleY="2.05" />

                </CheckBox.LayoutTransform>

            </CheckBox>

            <TextBlock
                Width="96"
                Height="33"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="White"
                Text=" Symbols" />

        </StackPanel>

    </Grid>

</Window>